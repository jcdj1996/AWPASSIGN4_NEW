<% include partials/header.ejs %>
<main class="container">
<div class="page-header" id="title">Please Login</div>
  <div class="jumbotron">
  <% if (messages.length > 0) { %>
  <div class="alert alert-danger"><%= messages %></div>
  <% } %>
    <form method="post" >
      <fieldset class="form-group">
        <label>Username:</label>
        <input type="text" class="form-control loginForm" name="username" required autofocus/>
      </fieldset>
      <fieldset class="form-group">
        <label>Password:</label>
        <input type="password" class="form-control loginForm" name="password" required/> or <a href="/users/add">Register</a>
      </fieldset>
      <fieldset class="form-group ">
        <input type="submit" class="btn btn-primary" value="Login"/>
      </fieldset>
    </form>
 </div>
</main>
